<!-- pages/user/user.wxml -->
<block wx:if="{{userInfo.openid}}">
  <view class="avatar">
    <image src="{{ userInfo.avatarUrl }}" bindtap="loginHandle"></image>
    <text>{{ userInfo.nickName }}</text>
  </view>
  <view class="cells">
    <view class="divider"></view>
    <navigator class="item">我的帖子</navigator>
    <navigator class="item">我的投稿</navigator>
    <navigator class="item">我的收藏</navigator>
    <navigator class="item">投稿</navigator>
    <navigator class="item">反馈</navigator>
    <view class="divider"></view>
    <navigator url="/pages/settings/settings" class="item">设置</navigator>
     <navigator class="item" url="./publishNews/publishNews" wx:if="{{userInfo.openid == 'onxKb5T4wpZof3q2rr-JKZ3OdG6E'}}">发布投稿   </navigator>
  </view>
</block>
<block wx:else="{{userInfo.openid}}">
    <!-- logo -->
    <view class="logo">
        <image class="logoImg" src="/images/logo.png" mode="widthFix"></image>
    </view>
    <!-- 登录按钮 -->
    <view class="loginButton">
        <!-- 在本小程序中只实现了微信登录 -->
        <view class="wechatLogin">
            <button open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">
                <text class="icon-github"></text>
                微信登录
            </button>
        </view>

    </view>
</block>
