.page{
  width: 90%;
  margin: 0 auto;
}
.title{
  font-size: 16px;
  display: flex;
  padding:30rpx; 
  border-bottom:1px solid #ccc; 
  line-height: 30px;
  font-weight: 600;
}
.user{
  margin-top: 30rpx;
  display: flex;
  align-items: center;
}
.user .left image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.user .left{
  display: flex;
  flex-direction: row;
}
.user .left .text{
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  margin-left: 20rpx;
  justify-content: space-between;
  color: #ccc;
}
.content{
  margin-top: 50rpx;
}
.contentText{
  font-size: 12px;
  color: #363636
}
.contentimage{
  margin-top: 10rpx;
}
.content image{
  margin-top: 20rpx;
}
