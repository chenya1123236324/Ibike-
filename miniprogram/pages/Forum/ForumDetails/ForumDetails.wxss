.boxImage image{
  margin-top: 10rpx;
  width: 350rpx;
  max-height: 250rpx;
}
.listBottom{
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-bottom: 15rpx;
}
.point image,.comment image{
  width: 25rpx;
  height: 25rpx;
  padding-left: 50rpx;

}
.point text,.comment text{
  color: #333;
  font-size: 25rpx; 
  padding-left: 10rpx;
}
.publishBtn{
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
}
.publishBtn image{
  width: 100rpx;
  height: 100rpx;
}