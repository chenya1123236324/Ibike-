/* pages/Forum/forum.wxss */
.page{
  width: 95%;
  margin: 0 auto;
}
.content{
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
}
.list{
  border-radius: 15rpx;
  width: 30%;
  height: 300rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  margin-top:40rpx; 

}
.list text{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 13px;
  color: #0569cb;
  margin: 20rpx 0;
}
.list image{
  border-radius: 15rpx;
  width: 100%;
  height: 180rpx;
}