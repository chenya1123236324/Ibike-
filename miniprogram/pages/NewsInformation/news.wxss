/* pages/NewsInformation/news.wxss */
/* 轮播图 */
.swiper-container{
  width: 90%;
  height: 280rpx;
  /* 居中作用 */
  margin: 0rpx auto;
  position: relative;
  border-radius: 15rpx;
  overflow: hidden;
}

.swiper{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.swiperItem{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.swiperItem>image{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.dots{
  width: auto;
  height: 10rpx;
  position: absolute;
  bottom: 20rpx;
  border-radius: 50rpx;
  left: 240rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 3rpx 10rpx;
}
.dotsItem{
  width: 15rpx;
  height: 15rpx;
  margin: 0rpx 8rpx;
  border-radius: 50%;
  background-color: #cdcdcd;
  transition: all .3s;
}
.active{
  background-color: #000;
}

/* 宫格导航 */
.nav{
  width: 100%;
  height: 142rpx;
  background-color: #fff;
  margin: 0rpx auto;
  padding: 10rpx 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  align-content: center;
}
.navItem{
  display: flex;
  font-size: 20rpx;
  text-align: center;
  line-height: 35rpx;
  color: #aaa;
  flex-direction: column;
}
.navIcon{
  width: 84rpx;
  height: 84rpx;
}

/* 热门资讯 */
.content{
  width: 100%;
  margin: 0rpx auto;
  background-color: #fff;
  margin-top: 10rpx;
}
.contentList{
  width: 90%;
  margin: 0rpx auto;
}
.barTitle{
  padding: 20rpx 0;
}
.NewsTitle{
font-size: 37rpx;
font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
font-weight: 800;
color: #333
}
.content{
  width: 100%;
  height: auto;
  padding: 20rpx 0rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #f1f1f1;
}
.contentImg{
  width: 228rpx;
  height: 160rpx;
  border-radius: 15rpx;
  padding-left: 10rpx;
}
.contentImg>image{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.content-right{
  width: 530rpx;
  height: 100%;
  margin-left: 20rpx;
}
.title{
  width: 100%;
  height: 108rpx;
  overflow: hidden;
}
.titleText{
  font-size: 35rpx;
  color: #333;
  text-align: left;
  display: -webkit-box;
  -webkit-line-clamp: 2;/*行数n*/
  -webkit-box-orient: vertical; 
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 10rpx;
}

.count{
